<div class="page-header">
  <h1>
    Register
    <small>Sign up for a new account</small>
  </h1>
</div>

<%= form_for(@user, :url => register_path, :method => :post) do |f| %>
  <% if @user.errors.any? %>
  <div class="alert alert-block alert-error">
    <h4 class="alert-heading"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :first_name, 'First Name', :class => 'form-label' %>
        <%= f.text_field :first_name, :size => 40, :maxlength => 200, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :last_name, 'Last Name', :class => 'form-label' %>
        <%= f.text_field :last_name, :size => 40, :maxlength => 200, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'Email', :class => 'form-label' %>
        <%= f.text_field :email, :size => 40, :maxlength => 200, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'Password', :class => 'form-label' %>
        <%= f.password_field :password, :size => 40, :maxlength => 200, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'Confirm password', :class => 'form-label' %>
        <%= f.password_field :password_confirmation, :size => 40, :maxlength => 200, :class => 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Register', :class => 'btn btn-primary' %>
  </div>
<% end %>
