<div class="page-header">
  <h1>
    Profile
    <small>Update your account information</small>
  </h1>
</div>

<% if flash[:notice] %>
  <div class="alert alert-block alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="pull-right well span2" style="text-align:center;">
  <%= image_tag("http://gravatar.com/avatar/#{current_user.email_hash}?s=100", :alt => current_user.name, :height => 100, :width => 100) %>
  <br>
  Your avatar is served from <a href="http://gravatar.com">Gravatar</a>
</div>

<%= form_for(@user, :url => profile_path, :method => :put) do |f| %>
  <% if @user.errors.any? %>
  <div class="alert alert-block alert-error">
    <h4 class="alert-heading"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :first_name, 'First Name', :class => 'form-label' %>
        <%= f.text_field :first_name, :size => 40, :maxlength => 200, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :last_name, 'Last Name', :class => 'form-label' %>
        <%= f.text_field :last_name, :size => 40, :maxlength => 200, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :username, 'Username', :class => 'control-label' %>
        <%= f.text_field :username, :size => 40, :maxlength => 200, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'Email', :class => 'control-label' %>
        <%= f.text_field :email, :size => 40, :maxlength => 200, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'Change password', :class => 'control-label' %>
        <%= f.password_field :password, :size => 40, :maxlength => 200, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'Confirm password', :class => 'control-label' %>
        <%= f.password_field :password_confirmation, :size => 40, :maxlength => 200, :class => 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Update Profile', :class => 'btn btn-primary' %>
  </div>
<% end %>
